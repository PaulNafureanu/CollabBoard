{
  "name": "collabboard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "description": "Keeps the energy of in-person creativity alive for remote teams. Users draw, type, and chat on one shared canvas with no onboarding hassle.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n client,server -c auto \"npm:dev --workspace=@collabboard/client\" \"npm:dev --workspace=@collabboard/server\"",
    "dev:client": "npm run dev --workspace=@collabboard/client",
    "dev:server": "npm run dev --workspace=@collabboard/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm run build --workspace=@collabboard/client",
    "build:server": "npm run build --workspace=@collabboard/server",
    "test:server": "npm run test -w @collabboard/server",
    "test:server:watch": "npm run test:watch -w @collabboard/server",
    "preview": "npm run preview --workspace=@collabboard/client",
    "start": "npm run start --workspace=@collabboard/server",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -b client server"
  },
  "keywords": [],
  "author": "Paul Nafureanu",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
